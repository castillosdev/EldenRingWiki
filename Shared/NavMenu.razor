    <div class="container-fluid">
        <a class="navbar-brand" href="">Elden Ring Wiki</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>
<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="creatures">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Creatures
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="npcs">
                <span class="oi oi-list-rich" aria-hidden="true"></span> NPCS
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="locations">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Locations
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="bosses">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Bosses
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
